<%- layout("/layout/boilerplate") %>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 1.8rem;
            opacity: 0.8;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: small;
        }

        .gst-btn {
            display: none;
        }

        /* tax toogle btn */
        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.5rem;
            padding: .85rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>

    <body>
        <!-- <h1>All Listings</h1> -->
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountain</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p> Castle</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-fish"></i></div>
                <p>OMG!</p>
            </div>
            <div class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                <p>Winter place</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farm House</p>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch ">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total before taxes</label>
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-m-2 row-cols-sm-1 mt-3">

            <% for(let list of allListings){ %>
                <a href="/listings/<%= list._id %>" style="text-decoration: none;">
                    <div class="card col listing-card" style="width: 20rem;">
                        <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem;">

                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= list.title %>
                                </b><br>
                                &#8377; <%= list.price.toLocaleString("en-in") %> /night
                                    &nbsp; <span><i class="gst-btn">+18% GST</i></span>
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>

        </div>
        <script>
            //tax btn toogle 
            let taxBtn = document.getElementById("switchCheckDefault");

            taxBtn.addEventListener("click", () => {
                let gstBtn = document.getElementsByClassName("gst-btn");

                for (let info of gstBtn) {
                    if (info.style.display != "inline") {
                        info.style.display = "inline";
                    } else {
                        info.style.display = "none";
                    }
                }

            });

        </script>
    </body>